<!--*************************************************************************************************************************************-->    
     <!--PRIMER FORMULARIO dOCTORES -->
<main style="
    width: 1000px;
    height: 800px;
">     
    <section id="primer">
        <form action="/actualizardoctor" method="POST" class="form" id="formulario" >
            <input id="id" name="id" value="<%= doctores.id %>" hidden>


            <p class="title">Registro Doctores</p>
            <p class="message">Complete los campos requeridos </p>
        

         <!--Nombre-->   
        <label for="doctornombre" >
            <input placeholder="" value="<%= doctores.nombres %>" type="text" class="input"  id="nombres" name="nombres" required>
            <span>Nombre</span>
        </label>
     

          <!--apellido-->
        <label for="doctorapellido">
            <input  placeholder="" value="<%= doctores.apellidos %>" type="text" class="input"  id="apellidos" name="apellidos" required>
            <span>Apellido</span>
        </label>
    
         <!--LISTA DESPLEGABLE ESPECIALIDAD-->
    
        <label id="esp"  for="doctorSpeciality">Especialidad:</label>
        <select title="especiality" value="<%= doctores.especialidad %>" id="especialidad" name="especialidad" required>
        
        <option value="">Seleccione una especialidad requerida</option>  
        <option value="Medicina general">Medicina general</option>
        <option value="Cardiología">Cardiología</option>
        <option value="Medicina interna">Medicina interna</option>
        <option value="Dermatología">Dermatología</option>
        <option value="Rehabilitación física">Rehabilitación física</option>
        <option value="Psicología">Psicología</option>
        <option value="Odontología">Odontología</option>
        <option value="Radiología">Radiología</option>
        </select>

  
       <!--Consultorio-->   
    <label for="consultorio">
        <input  placeholder="" value="<%= doctores.consultorio %>" type="text" class="input" id="consultorio" name="consultorio" required>
        <span>Consultorio</span>
    </label>
   
     <!--Correo Electrónico-->   
    <label  for="correo">
        <input  placeholder="" value="<%= doctores.correo %>" type="text" class="input" id="correo" name="correo" required>
        <span>Correo Electrónico</span>
    </label>


<!--BOTONES-->
    <button class="btn btn-primary mt-2" type="submit">Actualizar</button>
    <a href="/" class="btn btn-secondary">Cancelar</a>

    
</form>

<br>

            
</section>    

 

</main>





