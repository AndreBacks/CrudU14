<!--*************************************************************************************************************************************-->    
     <!--PRIMER FORMULARIO PACIENTES -->
<main style="
    width: 1000px;
    height: 800px;
">     
    <section id="primer">
        <form action="/actualizar" method="POST" class="form" id="formulario" >
            <input id="id" name="id" value="<%= pacientes.id %>" hidden>

            <p class="title">Registro Paciente</p>
            <p class="message">Complete los campos requeridos </p>
        

         <!--Nombre-->   
        <label for="doctornombre" >
            <input placeholder="" value="<%= pacientes.nombre %>" type="text" class="input"  id="nombre" name="nombre" required>
            <span>Nombre</span>
        </label>
     

          <!--numero cédula-->
          <label for="doctorcedula">
            <input placeholder="" value="<%= pacientes.ncedula %>" type="text" class="input" id="ncedula" name="ncedula" required>
            <span>Numero Cédula</span>
        </label>
        
        <!--apellido-->
        <label for="doctorLastName">
            <input  placeholder="" value="<%= pacientes.apellido %>"  type="text" class="input"  id="apellido" name="apellido" required>
            <span>Apellido</span>
        </label>

  
        <!--Edad-->   
        <label for="consultorio">
            <input  placeholder="" value="<%= pacientes.edad %>" type="number" class="input" id="edad" name="edad"  min="1" max="123" required>
            <span>Edad</span>
        </label>
   
    <!--Telefono-->   
    <label  for="email">
        <input  placeholder="" value="<%= pacientes.telefono %>"  type="tel" class="input" id="telefono" name="telefono" required>
        <span>Telefono</span>
    </label>


<!--BOTONES-->
    <button class="btn btn-primary mt-2" type="submit">Actualizar</button>
    <a href="/" class="btn btn-secondary">Cancelar</a>

    
</form>

<br>

            
</section>    

 

</main>





